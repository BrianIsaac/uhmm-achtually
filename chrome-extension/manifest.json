{
  "manifest_version": 3,
  "name": "Uhmm Actually - AI Fact Checker",
  "version": "1.0.0",
  "description": "Real-time AI-powered fact-checking for video meetings and YouTube. Mascot alerts you about false or unclear claims.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/thinking-pose.png", "assets/talking-pose.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
